# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'TestingEx' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

    # Pods for API service using Moya
    pod 'Moya/RxSwift', '~> 11.0'
    pod 'ObjectMapper', '~> 3.3'
    pod 'SwiftyJSON'
    # rx
    pod 'RxSwift', '~> 4.0'
    pod 'RxCocoa', '~> 4.0'
    # progress hud
    pod 'SVProgressHUD'
    # image rendering and caching
    pod 'Kingfisher'

  target 'TestingExTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'TestingExUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
